<br><h4 class="amber-text text-darken-2"><%= current_user.first_name %> <%= current_user.last_name %>'s Reviews</h4>
<div>
  <% if @ratings.empty? %>
    <p>You have no reviews yet.</p>
  <% else %>
    <% @ratings.each do |rating| %>
      <div class="row">
        <div class="col s7">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <% if rating.user.image.attached? %>
                <img class="circle" align="left" src="<%=(url_for(rating.user.image.variant(resize: "100x100^", crop: '100x100+0+0')))%>">
              <% else %>
                <%= image_tag("users/profile_pic.jpg", width: "100px", align:"left", class:"circle") %>
              <% end %>
              <span class="card-title" style="margin-left:120px;"><%= rating.brewery.name %></span>
              <p class="amber-text text-darken-2" style="margin-left:120px;">
                <%= rating.rating %>.0 / 5.0
              </p>
              <p style="margin-left:120px;">
                Reviewed on <%= rating.created_at.strftime("%B %d, %Y") %><br><br>
                <%= rating.comment %>
              </p>
            </div>
            <div class="card-action" style="margin-left:120px;">
              <%= link_to "Edit", edit_rating_path(rating) %>
              <%= link_to "Remove", rating_path(rating), method: "DELETE" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>


