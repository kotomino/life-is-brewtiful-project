<div class="row">
  <div class="col s8">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= rating.user.first_name %> <%= rating.user.last_name %></span>
        <p>
          Rating (1-5): <%= rating.rating %><br>
          Review: <%= rating.comment %>
        </p>
      </div>
      <div class="card-action">
        <a href="#">View User Profile</a>
        <%= link_to "Edit", edit_rating_path(rating) %>
        <%= link_to "Remove", rating_path(rating), method: "DELETE" %>
      </div>
    </div>
  </div>
</div>

  