<h4>Login</h4>

<%= form_tag login_path do %>
  <div class="input-field">
    <%= email_field_tag :email, nil, autofocus: true %>
    <%= label_tag :email %>
  </div>
  <div class="input-field">
    <%= password_field_tag :password %>
    <%= label_tag :password %>
  </div>

  <%= submit_tag "Login", class: "btn" %>
  
<% end %>