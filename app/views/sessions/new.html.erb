<br><br><br><br>
  <div class="row">
    <div class="col s4 offset-s4">
      <div class="card-panel">
      <center><h4 class="amber-text text-darken-2">Login</h4>
      <br>
        <span class="white-text">
          <%= form_tag login_path do %>
            <div class="row container">
              <div class="input-field">
                <%= email_field_tag :email, nil, autofocus: true %>
                <%= label_tag :email %>
              </div>
              <div class="input-field">
                <%= password_field_tag :password %>
                <%= label_tag :password %>
              </div>
              <br>
              <div class="input-field">
                <%= submit_tag "Login", class: "btn amber darken-2" %>
              </div>
            </div>
          <% end %>
            <div>
                <%= link_to "Log in with Google", '/auth/google_oauth2', method: :post %>
                <br>
                <%= link_to "Log in with Facebook", '/auth/facebook', method: :post %>
            </div>
        </span>
        </center>
      </div>
    </div>
  </div>