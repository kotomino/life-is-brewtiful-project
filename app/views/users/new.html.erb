<br><br>
  <div class="row">
    <div class="col s4 offset-s4">
      <div class="card-panel">
      <center>
        <h4 class="amber-text text-darken-2">Signup</h4>
        <br>
          <span class="white-text">
            <%= form_for @user, url: signup_path do |f| %>
                <div class="input-field">
                  <%= f.label :first_name %>
                  <%= f.text_field :first_name, autofocus: true %>
                </div>
                <div class="input-field">
                  <%= f.label :last_name %>
                  <%= f.text_field :last_name %>
                </div>
                <div class="input-field">
                  <%= f.label :email %>
                  <%= f.email_field :email %>
                </div>
                <div class="input-field">
                  <%= f.label :password %>
                  <%= f.password_field :password %>
                </div>
                <div>
                  <%= f.label "Profile Photo*" %><br>
                  <%= f.file_field :image %>
                  <p style="color:gray">*Photo is optional but you will not be able to upload one after account creation</p>
                </div>
                <br>
                <%= f.submit "Signup", class: "btn amber darken-2" %>
            <% end %>
            <br>
            <div>
                <%= link_to "Log in with Google", '/auth/google_oauth2', method: :post %>
                <br>
                <%= link_to "Log in with Facebook", '/auth/facebook', method: :post %>
            </div>
          </span>
        </center>
      </div>
    </div>
  </div>