<h4>Signup</h4>
<%= form_for @user, url: signup_path do |f| %>
  <div class="input-field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  <div class="input-field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="input-field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="input-field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit "Signup", class: "btn" %>
<% end %>