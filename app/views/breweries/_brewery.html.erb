<div class="row"> 
  <div class="col s12 m6">
    <div class="card small horizontal z-depth-2">
      <div class="card-image">
        <img src="https://lorempixel.com/100/190/nature/6">
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <h5 class="header amber-text text-darken-2"><%= brewery.name %> (<%= rating_average(brewery) %>)</h5>
          <p>
            <%= brewery.street %><br>
            <%= brewery.city %>,
            <%= brewery.state %>
            <%= brewery.postal_code %><br>
            Phone: <%= style(brewery.phone) %><br>
            Website: <%= link_to brewery.website_url, brewery.website_url %>
            <br>
            
          </p>
        </div>
        <div class="card-action">
          <a href="<%= brewery_ratings_path(brewery) %>">See Reviews (<%= brewery.ratings.count %>)</a>
        </div>
      </div>
    </div>
  </div>
